<div class="container">
  <h1><%= "New task" %></h1>

    <%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: "form-control" %>
  </div>
    <%= f.submit class: "btn btn-default btn-primary" %>
    <% end %>

