<div class="container ">
  <h1><%= @task.title.capitalize %></h1>
  <div>
    <div class="instructions">
      <%= @task.details.capitalize %>
    </div>
    <div class="form-check" >
        <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
        <label class="form-check-label" for="defaultCheck1">
          <li> <%= link_to "This task is not completed yet", tasks_path %> </li>
        </label>
    </div>
    <div class="form-check" >
        <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
        <label class="form-check-label" for="defaultCheck1">
          <li> <%= link_to "Edit", edit_path(@task) %> </li>
        </label>
    </div>
    <ul class="aligned-left blue-link">
      <li> <%= link_to "Back to list", tasks_path %> </li>
      <li> <%= link_to "Delete", task_path(@task), method: :delete %> </li>
    </ul>
</div>
